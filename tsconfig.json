{
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": "./src/",
		"outDir": "./dist/",
		"target": "es6",
		"sourceMap": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"noResolve": false,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		"strict": true
	},
	"compileOnSave": false,
	"include": [
		"typings/**/*.d.ts",
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules",
		"!node_modules/@types"
	]
}
